<h1>New Event</h1>

<%= form_with model: @event , local: true do |form| %>
  <%= form.label :title %>
  <%= form.text_field :title%>
  
  <%= form.label :date  %>
  <%= form.date_field :date %>

<%= form.fields_for :reminders do |reminder_form| %>
  <%= reminder_form.label :message  %>
  <%= reminder_form.text_field :message %>

  <%= reminder_form.label :time  %>
  <%= reminder_form.time_field :time  %>

<% end %>
    <%= form.submit "Create Event " %>
<% end %>
